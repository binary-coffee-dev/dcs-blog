{
  "connection": "default",
  "collectionName": "comments",
  "info": {
    "name": "Comment"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "body": {
      "type": "richtext"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "email": {
      "type": "email"
    },
    "name": {
      "type": "string"
    },
    "post": {
      "model": "post",
      "via": "commentsList"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "comments"
    }
  }
}
