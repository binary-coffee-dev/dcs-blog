{
  "routes": [
    {
      "method": "GET",
      "path": "/episodes",
      "handler": "episode.find",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/episodes/count",
      "handler": "episode.count",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/episodes/:id",
      "handler": "episode.findOne",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "POST",
      "path": "/episodes",
      "handler": "episode.create",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "PUT",
      "path": "/episodes/:id",
      "handler": "episode.update",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "DELETE",
      "path": "/episodes/:id",
      "handler": "episode.delete",
      "config": {
        "policies": ["global::disable"]
      }
    }
  ]
}
