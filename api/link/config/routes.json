{
  "routes": [
    {
      "method": "GET",
      "path": "/links",
      "handler": "link.find",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/links/count",
      "handler": "link.count",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/links/:id",
      "handler": "link.findOne",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "POST",
      "path": "/links",
      "handler": "link.create",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "PUT",
      "path": "/links/:id",
      "handler": "link.update",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "DELETE",
      "path": "/links/:id",
      "handler": "link.delete",
      "config": {
        "policies": ["global::disable"]
      }
    }
  ]
}
