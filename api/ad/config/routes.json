{
  "routes": [
    {
      "method": "GET",
      "path": "/ads",
      "handler": "ad.find",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/ads/count",
      "handler": "ad.count",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/ads/:id",
      "handler": "ad.findOne",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "POST",
      "path": "/ads",
      "handler": "ad.create",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "PUT",
      "path": "/ads/:id",
      "handler": "ad.update",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "DELETE",
      "path": "/ads/:id",
      "handler": "ad.delete",
      "config": {
        "policies": ["global::disable"]
      }
    }
  ]
}
