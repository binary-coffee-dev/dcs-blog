{
  "routes": [
    {
      "method": "GET",
      "path": "/providers",
      "handler": "provider.find",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/providers/count",
      "handler": "provider.count",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/providers/:id",
      "handler": "provider.findOne",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "POST",
      "path": "/providers",
      "handler": "provider.create",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "PUT",
      "path": "/providers/:id",
      "handler": "provider.update",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "DELETE",
      "path": "/providers/:id",
      "handler": "provider.delete",
      "config": {
        "policies": ["global::disable"]
      }
    }
  ]
}
