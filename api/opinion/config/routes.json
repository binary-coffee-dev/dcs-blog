{
  "routes": [
    {
      "method": "GET",
      "path": "/opinions",
      "handler": "opinion.find",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/opinions/count",
      "handler": "opinion.count",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/opinions/:id",
      "handler": "opinion.findOne",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "POST",
      "path": "/opinions",
      "handler": "opinion.create",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "PUT",
      "path": "/opinions/:id",
      "handler": "opinion.update",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "DELETE",
      "path": "/opinions/:id",
      "handler": "opinion.delete",
      "config": {
        "policies": ["global::disable"]
      }
    }
  ]
}
