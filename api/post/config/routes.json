{
  "routes": [
    {
      "method": "GET",
      "path": "/posts",
      "handler": "Post.find",
      "config": {}
    },
    {
      "method": "GET",
      "path": "/posts/count",
      "handler": "Post.count",
      "config": {}
    },
    {
      "method": "GET",
      "path": "/posts/name/:name/",
      "handler": "Post.findOneByName",
      "config": {}
    },
    {
      "method": "GET",
      "path": "/posts/related/:id",
      "handler": "Post.findSimilarPosts",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/posts/feed/:format",
      "handler": "Post.feed",
      "config": {}
    },
    {
      "method": "GET",
      "path": "/posts/:id",
      "handler": "Post.findOne",
      "config": {}
    },
    {
      "method": "POST",
      "path": "/posts",
      "handler": "Post.create",
      "config": {
        "policies": [
          "global::createPost",
          "canPublishPost"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/posts/:id",
      "handler": "Post.update",
      "config": {
        "policies": [
          "global::canModifyPost",
          "canPublishPost"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/posts/:id",
      "handler": "Post.delete",
      "config": {
        "policies": [
          "global::canModifyPost"
        ]
      }
    }
  ]
}
