{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "post",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "body": {
      "type": "richtext"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "banner": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "enable": {
      "type": "boolean"
    },
    "name": {
      "unique": true,
      "type": "string"
    },
    "views": {
      "type": "biginteger",
      "default": "0"
    },
    "comments": {
      "type": "biginteger",
      "default": "0"
    },
    "likes": {
      "type": "biginteger",
      "default": "0"
    },
    "commentsList": {
      "via": "post",
      "collection": "comment"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "tags": {
      "via": "posts",
      "collection": "tag"
    },
    "opinions": {
      "via": "post",
      "collection": "opinion"
    },
    "links": {
      "via": "post",
      "collection": "link"
    }
  }
}
