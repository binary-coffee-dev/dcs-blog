{
  "routes": [
    {
      "method": "GET",
      "path": "/subscriptions",
      "handler": "subscription.find",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/subscriptions/count",
      "handler": "subscription.count",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/subscriptions/:id",
      "handler": "subscription.findOne",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "POST",
      "path": "/subscriptions",
      "handler": "subscription.create",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "PUT",
      "path": "/subscriptions/:id",
      "handler": "subscription.update",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "DELETE",
      "path": "/subscriptions/:id",
      "handler": "subscription.delete",
      "config": {
        "policies": ["global::disable"]
      }
    },
    {
      "method": "GET",
      "path": "/subscribe",
      "handler": "subscription.subscribe",
      "config": {
        "policies": ["global::disable"]
      }
    }
  ]
}
